{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "react-app",
    "react-app/jest"
  ],
  "parser": "@typescript-eslint/parser",
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      },
      "alias": {
        "map": [
          [
            "@src",
            "./src"
          ],
          [
            "@assets",
            "./assets"
          ],
          [
            "@public",
            "public"
          ],
          [
            "src",
            "src"
          ],
          [
            "@config",
            "src/config.tsx"
          ],
          [
            "@utils",
            "src/utils/index.ts"
          ],
          [
            "@utils/*",
            "src/utils/*"
          ],
          [
            "@core/*",
            "src/core/*"
          ],
          [
            "@components/*",
            "src/components/*"
          ],
          [
            "@shared/*",
            "./src/shared/*"
          ],
          [
            "@constants",
            "./src/components/constants.tsx"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    },
    "react": {
      "version": "latest"
    }
  },
  "rules": {
    "react/prop-types": "off",
    "@typescript-eslint/no-var-requires": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off"
  }
}