{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules/**/*"]
}
